<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    android:id="@+id/loginCardView"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Email"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtLoginEmail"
            android:inputType="textEmailAddress"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Password"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtLoginPassword"
            android:inputType="textPassword"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkBoxRememberMe"
            style="@style/Material.Drawable.CheckBox"
            android:text="Remember Me"
            android:gravity="center_vertical"
            android:textStyle="bold"
            app:cbd_strokeColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            app:cbd_tickColor="@color/colorAccent" />





    </LinearLayout>
</android.support.v7.widget.CardView>