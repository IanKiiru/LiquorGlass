<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    android:id="@+id/regCardView"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="First name"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtFirstName"
            android:inputType="textPersonName"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Last name"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtLastName"
            android:inputType="textPersonName"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Email"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtEmail"
            android:inputType="textEmailAddress"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Phone"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtPhone"
            android:inputType="phone"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Password"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtPassword"
            android:inputType="textPassword"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="@color/txtSocialDiscovery"
            android:text=""
            android:hint="Re-enter password"
            app:met_textColorHint="@color/txtSocialDiscovery"
            android:id="@+id/edtConfirmPassword"
            android:inputType="textPassword"
            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/txtSocialDiscovery"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/txtSocialDiscovery"
            />
    </LinearLayout>
</ScrollView>
</android.support.v7.widget.CardView>